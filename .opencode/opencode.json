{
  "$schema": "https://opencode.ai/config.json",
  "model": "openai/gpt-5.2",
  "small_model": "openai/gpt-5.2",
  "instructions": ["INSTRUCTIONS.md"],
  "plugin": ["oh-my-opencode", "opencode-antigravity-auth"],
  "tools": {
    "write": true,
    "edit": true,
    "bash": true,
    "read": true
  },
  "permission": {
    "write": "allow",
    "edit": "allow",
    "bash": "allow"
  },
  "default_agent": "sisyphus",
  "compaction": {
    "auto": true,
    "prune": true
  },
  "theme": "opencode",
  "tui": {
    "scroll_speed": 3,
    "diff_style": "auto"
  },
  "watcher": {
    "ignore": ["node_modules/**", "dist/**", "build/**", ".git/**", "*.log"]
  }
}
 